{
  "private": true,
  "name": "lit-html-tests",
  "version": "1.0.0",
  "description": "Randomized testing of lit-html",
  "scripts": {
    "test": "rollup -c rollup.config.js && open ./test/index.html"
  },
  "author": "Sune Simonsen <sune@we-knowhow.dk>",
  "license": "MIT",
  "dependencies": {
    "babel-jest": "^21.0.2",
    "chance-generators": "^2.1.1",
    "lit-html": "^0.6.0",
    "unexpected": "^10.35.0",
    "unexpected-check": "^1.12.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "mocha": "^3.5.3",
    "prettier": "^1.6.1",
    "rollup": "^0.49.3",
    "rollup-plugin-commonjs": "^8.2.1",
    "rollup-plugin-node-resolve": "^3.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": ["js"],
    "transformIgnorePatterns": ["/node_modules/(?!(lit-html.*?\\.js$))"],
    "testRegex": "\\.*(spec\\.js)$"
  }
}
